.backView{
  width: 520rpx;
  margin: 0 auto;
  text-align: right;
  margin-top: 10rpx;
}
.select_item:nth-last-child(1) {
  margin-bottom: 0;
}

.bottom{
  position: fixed;
  bottom: 20rpx;
  left: 10%;
  width: 80%;
  height: 80rpx;
  border-radius: 60rpx;
  /* padding: 0 20rpx; */
}